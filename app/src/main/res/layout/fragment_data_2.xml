<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataFragment_2">

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="選擇6張書本內頁照片"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_camera1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="確認"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Data2_frame6" />

    <ImageView
        android:id="@+id/Data2_frame1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/frame"
        app:layout_constraintStart_toStartOf="@+id/tv_title2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2" />

    <ImageView
        android:id="@+id/Data2_image1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame1"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame1"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Data2_frame2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/frame"
        app:layout_constraintStart_toEndOf="@+id/Data2_frame1"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame1" />

    <ImageView
        android:id="@+id/Data2_image2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame2"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame2"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Data2_frame3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/frame"
        app:layout_constraintStart_toEndOf="@+id/Data2_frame2"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame2" />

    <ImageView
        android:id="@+id/Data2_image3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame3"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame3"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Data2_frame4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/frame"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame1"
        app:layout_constraintTop_toBottomOf="@+id/Data2_frame1" />

    <ImageView
        android:id="@+id/Data2_image4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame4"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame4"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Data2_frame5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/frame"
        app:layout_constraintStart_toEndOf="@+id/Data2_frame4"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame4" />

    <ImageView
        android:id="@+id/Data2_image5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame5"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame5"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Data2_frame6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/frame"
        app:layout_constraintStart_toEndOf="@+id/Data2_frame5"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame5" />

    <ImageView
        android:id="@+id/Data2_image6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/Data2_frame6"
        app:layout_constraintTop_toTopOf="@+id/Data2_frame6"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>